
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

@*codes for adding a search Button*@
<asp:Content ID="headerContent" ContentPlaceHolderID="headerPlaceHolder" runat="server">
    <script type="text/javascript" src="../../Scripts/jquery.autocomplete.js"></script>
    <link href="../../Content/jquery.autocomplete.css" rel="stylesheet" type="text/css" />

    <script type="text/javascript">

        $(document).ready(function () {
            $("#searchTerm").autocomplete("/Home/getAjaxResult/");
        });

    </script>
</asp:Content>

<asp:Content ID="Content2" ContentPlaceHolderID="MainContent" runat="server">

    <h2>Look for a Cut Name</h2>

    <form action="/Home/Search" method="post" id="searchForm">
        <input type="text" name="searchTerm" id="searchTerm" value="" size="10" maxlength="30" />
        <input type="submit" value="Search" />
    </form>
    <br />

</asp:Content>



<div class="row">
    <div class="col-md-4">
        <h2>Cow Cuts</h2>
        <p>
            @Html.DropDownList("Cow", "--Select a Cow Cut--");
    </div>
    <div class="col-md-4">
        <h2>Get more libraries</h2>
        <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Pig Cuts</h2>
        @Html.DropDownList("Pig", "--Select a Pig Cut--");
    </div>
</div>